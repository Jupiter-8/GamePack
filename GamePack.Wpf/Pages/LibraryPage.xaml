<Page x:Class="GamePack.Wpf.Pages.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GamePack.Wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage">

    <Grid Background="DarkGoldenrod">
        <TextBlock
            FontSize="17"
            Foreground="White"
            Text="Sort by: "
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="30,15"/>
        <ComboBox 
            Style="{DynamicResource FlatComboBoxStyle1}"
            Margin="100,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectedIndex="0"
            IsDropDownOpen="True" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Recent"/>
            <ComboBoxItem Content="Alphabetical"/>
        </ComboBox>
        
        <Button Height="20" Width="100" Click="AddGame_OnClick">
            Add game
        </Button>
    </Grid>
</Page>
